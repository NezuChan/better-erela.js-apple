{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2020",
        "module": "commonjs",
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": [
        "src/**.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}